{
	"name": "language-nsis",
	"version": "9.1.1",
	"description": "Atom language support for NSIS, including grammar, snippets and build system",
	"license": "MIT",
	"type": "commonjs",
	"main": "lib/main.js",
	"types": "lib/main.d.ts",
	"scripts": {
		"build": "tsup",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepare": "lefthook install",
		"prepublishOnly": "npm run build",
		"publish:ppm": "PPM_PUBLISH=1 ppm publish",
		"test": "echo \"no tests yet\" && exit 0"
	},
	"author": {
		"name": "Jan T. Sott",
		"url": "http://github.com/idleberg"
	},
	"keywords": [
		"nsis",
		"nullsoft",
		"installer",
		"setup",
		"windows",
		"build",
		"build tool",
		"compiler",
		"grammar",
		"language syntax"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/atom-language-nsis.git"
	},
	"engines": {
		"atom": ">=1.52.0 <2.0.0",
		"pulsar": ">=1.102.0 <2.0.0"
	},
	"package-deps": [
		{
			"name": "browse",
			"minimumVersion": "3.1.0"
		},
		{
			"name": "busy-signal",
			"minimumVersion": "2.0.0"
		},
		[
			{
				"name": "console",
				"minimumVersion": "0.4.0"
			},
			{
				"name": "console-panel"
			}
		],
		{
			"name": "atom-ide-hyperclick"
		},
		{
			"name": "hyperclick-nsis",
			"minimumVersion": "0.5.0"
		},
		{
			"name": "linter",
			"minimumVersion": "2.0.0"
		},
		{
			"name": "linter-makensis",
			"minimumVersion": "0.7.0"
		},
		{
			"name": "linter-ui-default"
		},
		[
			{
				"name": "linter"
			},
			{
				"name": "atom-ide-ui"
			}
		]
	],
	"activationCommands": {
		"atom-workspace": [
			"NSIS:command-reference",
			"NSIS:compile",
			"NSIS:compile-strict",
			"NSIS:convert-language-file",
			"NSIS:create-.atom-build-file",
			"NSIS:open-package-settings",
			"NSIS:satisfy-dependencies",
			"NSIS:set-default-runner",
			"NSIS:show-compiler-flags",
			"NSIS:show-version",
			"NSIS:unset-default-runner"
		]
	},
	"activationHooks": [
		"language-nlf:grammar-used",
		"language-nsis:grammar-used"
	],
	"consumedServices": {
		"browse": {
			"versions": {
				"^1.0.0": "consumeBrowse"
			}
		},
		"busy-signal": {
			"versions": {
				"1.0.0": "consumeSignal"
			}
		},
		"console": {
			"versions": {
				"^1.0.0": "consumeConsolePanel"
			}
		},
		"console-panel": {
			"versions": {
				"^1.0.0": "consumeConsolePanel"
			}
		}
	},
	"devDependencies": {
		"@atxm/developer-console": "^0.6.1",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.4.1",
		"@nsis/nlf": "^0.13.0",
		"@types/atom": "^1.40.18",
		"@types/node": "^24.10.1",
		"atom-package-deps": "^8.0.0",
		"atom-satisfy-dependencies": "^0.3.0",
		"atom-select-list": "^0.8.1",
		"concurrently": "^9.2.1",
		"execa": "^5.1.1",
		"makensis": "3.0.3",
		"open": "^8.4.1",
		"tslib": "^2.8.1",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"which": "^6.0.0",
		"yaml": "^2.8.1"
	}
}
