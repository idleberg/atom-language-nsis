{
  "name": "language-nsis",
  "version": "8.3.0",
  "description": "Atom language support for NSIS, including grammar, snippets and build system",
  "license": "MIT OR GPL-2.0",
  "main": "./lib/main",
  "typings": "./types/index.d.ts",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production rollup -c",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "eslint": "eslint --fix ./src",
    "jsonlint": "jsonlint ./grammars/*.json ./keymaps/*.json menus/*.json snippets/*.json --quiet",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "NODE_ENV=development rollup -w -c",
    "test": "npm run eslint"
  },
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "keywords": [
    "nsis",
    "nullsoft",
    "installer",
    "setup",
    "windows",
    "build",
    "build tool",
    "compiler",
    "grammar",
    "language syntax"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-language-nsis.git"
  },
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "package-deps": [
    {
      "name": "console-panel"
    },
    {
      "name": "atom-ide-hyperclick"
    },
    {
      "name": "hyperclick-nsis",
      "minimumVersion": "0.5.0"
    },
    {
      "name": "linter",
      "minimumVersion": "2.0.0"
    },
    {
      "name": "linter-makensis",
      "minimumVersion": "0.7.0"
    },
    {
      "name": "linter-ui-default"
    },
    [
      {
        "name": "linter"
      },
      {
        "name": "atom-ide-ui"
      }
    ]
  ],
  "activationCommands": {
    "atom-workspace": [
      "NSIS:command-reference",
      "NSIS:compile",
      "NSIS:compile-strict",
      "NSIS:convert-language-file",
      "NSIS:create-.atomâ€“build-file",
      "NSIS:open-package-settings",
      "NSIS:satisfy-dependencies",
      "NSIS:set-default-runner",
      "NSIS:show-compiler-flags",
      "NSIS:show-version",
      "NSIS:unset-default-runner"
    ]
  },
  "activationHooks": [
    "language-nlf:grammar-used",
    "language-nsis:grammar-used"
  ],
  "consumedServices": {
    "console-panel": {
      "versions": {
        "^1.0.0": "consumeConsolePanel"
      }
    }
  },
  "dependencies": {
    "@atxm/open-package-settings": "^0.1.0",
    "@nsis/nlf": "^0.8.1",
    "atom-package-deps": "^7.0.2",
    "atom-read-manifest": "^0.5.2",
    "atom-satisfy-dependencies": "^0.3.0",
    "atom-select-list": "^0.7.2",
    "dotenv": "^8.2.0",
    "execa": "^4.0.3",
    "makensis": "^0.21.2",
    "open": "^7.3.0",
    "which": "^2.0.2",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/atom": "^1.40.4",
    "@types/electron": "^1.6.10",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": "^4.3.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.29.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "npm run jsonlint"
  }
}
