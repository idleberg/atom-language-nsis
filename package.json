{
	"name": "language-nsis",
	"version": "9.0.5",
	"description": "Atom language support for NSIS, including grammar, snippets and build system",
	"license": "MIT",
	"main": "./lib/main.js",
	"typings": "./types/index.d.ts",
	"scripts": {
		"build": "tsup",
		"dev": "npm run build -- --watch",
		"lint:code": "eslint **/*.json ./src/**/*.ts --no-warn-ignored",
		"lint:markdown": "remark . --quiet --frail --ignore-path .gitignore",
		"lint": "concurrently --prefix '{name}' -c 'blue,green' 'npm:lint:*'",
		"prepare": "husky",
		"prepublishOnly": "npm run build",
		"publish:ppm": "PPM_PUBLISH=1 ppm publish",
		"test": "echo \"no tests yet\" && exit 0"
	},
	"author": {
		"name": "Jan T. Sott",
		"url": "http://github.com/idleberg"
	},
	"keywords": [
		"nsis",
		"nullsoft",
		"installer",
		"setup",
		"windows",
		"build",
		"build tool",
		"compiler",
		"grammar",
		"language syntax"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/atom-language-nsis.git"
	},
	"engines": {
		"atom": ">=1.52.0 <2.0.0",
		"pulsar": ">=1.102.0 <2.0.0"
	},
	"package-deps": [
		{
			"name": "browse",
			"minimumVersion": "3.1.0"
		},
		{
			"name": "busy-signal",
			"minimumVersion": "2.0.0"
		},
		[
			{
				"name": "console",
				"minimumVersion": "0.4.0"
			},
			{
				"name": "console-panel"
			}
		],
		{
			"name": "atom-ide-hyperclick"
		},
		{
			"name": "hyperclick-nsis",
			"minimumVersion": "0.5.0"
		},
		{
			"name": "linter",
			"minimumVersion": "2.0.0"
		},
		{
			"name": "linter-makensis",
			"minimumVersion": "0.7.0"
		},
		{
			"name": "linter-ui-default"
		},
		[
			{
				"name": "linter"
			},
			{
				"name": "atom-ide-ui"
			}
		]
	],
	"activationCommands": {
		"atom-workspace": [
			"NSIS:command-reference",
			"NSIS:compile",
			"NSIS:compile-strict",
			"NSIS:convert-language-file",
			"NSIS:create-.atom-build-file",
			"NSIS:open-package-settings",
			"NSIS:satisfy-dependencies",
			"NSIS:set-default-runner",
			"NSIS:show-compiler-flags",
			"NSIS:show-version",
			"NSIS:unset-default-runner"
		]
	},
	"activationHooks": [
		"language-nlf:grammar-used",
		"language-nsis:grammar-used"
	],
	"consumedServices": {
		"browse": {
			"versions": {
				"^1.0.0": "consumeBrowse"
			}
		},
		"busy-signal": {
			"versions": {
				"1.0.0": "consumeSignal"
			}
		},
		"console": {
			"versions": {
				"^1.0.0": "consumeConsolePanel"
			}
		},
		"console-panel": {
			"versions": {
				"^1.0.0": "consumeConsolePanel"
			}
		}
	},
	"devDependencies": {
		"@atxm/developer-console": "^0.6.1",
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@nsis/nlf": "^0.12.0",
		"@types/atom": "^1.40.18",
		"@types/node": "^16.18.126",
		"atom-package-deps": "^8.0.0",
		"atom-satisfy-dependencies": "^0.3.0",
		"atom-select-list": "^0.8.1",
		"concurrently": "^9.1.2",
		"eslint": "^9.24.0",
		"eslint-plugin-jsonc": "^2.20.0",
		"eslint-plugin-unicorn": "^58.0.0",
		"execa": "^5.1.1",
		"husky": "^9.1.7",
		"makensis": "3.0.0-alpha.3",
		"open": "^8.4.2",
		"prettier": "^3.5.3",
		"remark-cli": "^12.0.1",
		"remark-preset-lint-recommended": "^6.1.3",
		"remark-preset-prettier": "^2.0.2",
		"rimraf": "^3.0.2",
		"stylelint": "^14.16.1",
		"tslib": "^2.8.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.29.0",
		"which": "^3.0.1",
		"yaml": "^2.7.1"
	},
	"nano-staged": {
		"*.(json|mjs|ts)": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"*.md": "prettier --write"
	},
	"dependencies": {
		"nano-staged": "^0.8.0"
	}
}
